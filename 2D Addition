#include<stdio.h>
int main()
{
    int a[10][10],b[10][10],add[10][10],r,c,i,j;
    printf("enter row and coloum size");
    scanf("%d%d",&r,&c);
    printf("enter values in a matrix");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
     printf("enter values in b matrix");
     for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&b[i][j]);
        }
    }
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            add[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("Adiition is:\n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            printf("%d\t",add[i][j]);
        }
        printf("\n");
    }
    return 0;
}
